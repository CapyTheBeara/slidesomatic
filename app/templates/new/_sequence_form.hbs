<h4>Time Your Slides</h4>

<div class="row">
    <div class="col-md-12">
        <label>
            Slide Number
            <span class='hint--right' data-hint="Before pressing the 'Add Slide' button, set your video/audio to the slide's start time.">
                <span class="glyphicon glyphicon-info-sign">
                </span>
            </span>
        </label>
    </div>
</div>

<div class='row form-group input-group-sm'>
    <div class="col-md-4">
       <button type = 'button'
                class = 'btn btn-success btn-sm'
                {{action 'addSequence'}}>
            Add Slide
        </button>
    </div>

    <div class="col-md-6 col-md-offset-1">
        {{deck-controls slide=slide}}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label>
            Full Screen Video Mode
            <span class="hint--right" data-hint='Sets when your video will go in and out of full screen mode.'>
                <span class="glyphicon glyphicon-info-sign">
                </span>
            </span>
        </label>
    </div>
</div>

<div class="row form-group">
    <div class="col-md-12">
        {{#if videoMode}}
            <button class="btn btn-warning btn-sm"
                    {{action 'toggleFullVideo'}}>
                Turn OFF
            </button>
        {{else}}
            <button class="btn btn-info btn-sm"
                    {{action 'toggleFullVideo'}}>
                Turn ON
            </button>
        {{/if}}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label>
            External Website
        </label>
        <span class="hint--right" data-hint="Display another website as a frame at this time point.">
            <span class="glyphicon glyphicon-info-sign">
            </span>
        </span>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        {{input value=site}}
        <button class="btn btn-info btn-sm"
                {{action 'addSite'}}>
            Add Site
        </button>

        {{#if siteMode}}
            <button class="btn btn-warning btn-sm"
                    {{action 'removeSite'}}>
                Remove Site
            </button>
        {{/if}}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label>
            Presentation Mode
            <span class='hint--right' data-hint="Turning on Presentation Mode will cause the slides to follow the slide sequence while you are setting your times.">
                <span class="glyphicon glyphicon-info-sign">
                </span>
            </span>
        </label>
    </div>
</div>

<div class="row ">
    <div class="col-md-12">
        {{toggle-switch action='changePresentationMode'}}
    </div>
</div>
