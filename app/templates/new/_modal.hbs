<div class="row">
    <h4>Copy and paste your website address here</h4>
    <div class='form-group'>
        {{input class = 'form-control'
                placeholder = 'Slides Website Address'
                value = deck.url
                action = 'addDeck'}}

        {{validation-message validationState=deck.validationState}}

        <span class="help-block">
            You can use one of these slide hosting sites:
            <ul class='list-unstyled list-inline'>
                <li>
                    <a href="http://www.slideshare.net">
                        SlideShare
                    </a>
                </li>
                <li>
                    <a href="https://speakerdeck.com/">
                        Speaker Deck
                    </a>
                </li>
            </ul>
        </span>
    </div>

    {{#if deck.valid}}
        <div class='form-group'>
            {{input class = 'form-control'
                    placeholder = 'Video or Audio Website Address'
                    value = media.url
                    action = 'addVideo'}}

        {{validation-message validationState=media.validationState}}
        </div>
    {{/if}}

    <div class='form-group'>
        <button class='btn btn-success' {{action 'submitUrls'}}>Go</button>
    </div>

    <div class="form-group">
        <a class='btn btn-default' {{action 'addTestingUrls'}}>TESTING</a>
    </div>
</div>

