<div class='tr row' {{bind-attr class='isPast:past'}}>
    <div class='td col1'>
        <a href="#" {{action 'skipTo' start}}>
            {{format-seconds start}}
        </a>
    </div>

    {{#if controllers.sequences.showSeconds}}
    <div class='td col2'>
        {{start}}
    </div>
    {{/if}}

    <div class='td col3'>
        {{slide}}
    </div>

    <div class='td col4'>
        {{#if controllers.sequences.editMode}}
        <button {{action 'edit'}}>Edit</button>
        {{/if}}
    </div>
</div>
