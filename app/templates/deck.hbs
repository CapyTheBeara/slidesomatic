<div {{bind-attr class=":deck-wrapper siteMode:hide"}}
     id='slide-wrapper'>
  <span id='pointer' class="glyphicon glyphicon-arrow-up hide"></span>

  {{#if iframe}}
      {{slide-iframe endpoint = imgEndpoint
                     firstIndex = firstIndex
                     slide = slide}}
  {{else}}
      {{slide-image endpoint = imgEndpoint
                    firstIndex = firstIndex
                    deck  = this}}

      {{slide-image endpoint = imgEndpoint
                    firstIndex = firstIndex
                    deck = this
                    hidden = true}}
  {{/if}}
</div>

{{site-iframe class = 'deck-wrapper'
              show = siteMode
              src = site}}
