{{#if youtube}}
    {{popcorn-video id  = 'video-view'
                    media = content
                    action = 'setTime'
                    mediaPlayer = player}}
{{/if}}

{{#if soundcloud}}
    {{popcorn-media id='audio-view'
                    media = content
                    action = 'setTime'
                    mediaPlayer = player}}
{{/if}}

{{#if editMode}}
    {{input-slider value = scrubHighValue
                   action='scrubHigh'}}
    {{input-slider value = scrubMediumValue
                   action='scrubMedium'}}
    {{input-slider value = scrubLowValue
                   action='scrubLow'}}
{{/if}}
